#------------------------------------------------------------------------------------
# Build all targets
#------------------------------------------------------------------------------------
all: libraries sample

#------------------------------------------------------------------------------------
# Builds
#------------------------------------------------------------------------------------
.PHONY: clean sample libgpio

sample:
	cd ./samples && make fb

libraries:
	cd ./lib && make all

clean:
	cd ./samples && make clean
	cd ./lib && make clean