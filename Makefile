#####################################################################################
#
# Raspberry Pi bare-metal master make
#
#####################################################################################


#------------------------------------------------------------------------------------
# Build all targets
#------------------------------------------------------------------------------------
all: libraries sample

#------------------------------------------------------------------------------------
# Builds
#------------------------------------------------------------------------------------
.PHONY: clean sample libgpio

vga:
	cd ./vga-rpi && make vga

sample:
	cd ./samples && make uart1

libraries:
	cd ./lib && make all

clean:
	cd ./vga-rpi && make clean
	cd ./samples && make clean
	cd ./lib && make clean